<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <import type="me.li2.movies.ui.home.top.TopItemUI" />

        <variable
            name="isLoading"
            type="Boolean" />

        <variable
            name="topItems"
            type="List&lt;TopItemUI&gt;" />
    </data>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isRefreshing="@{isLoading}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/topItemsViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,2:2.3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:topItems="@{topItems}"
                tools:background="@android:color/holo_orange_dark"
                tools:listItem="@layout/home_top_item_view" />

            <com.rd.PageIndicatorView
                android:id="@+id/topItemsPagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="@id/topItemsViewPager"
                app:layout_constraintEnd_toEndOf="@id/topItemsViewPager"
                app:layout_constraintStart_toStartOf="@id/topItemsViewPager"
                app:piv_animationType="none"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_padding="12dp"
                app:piv_radius="6dp"
                app:piv_selectedColor="?attr/colorPrimary"
                app:piv_unselectedColor="?attr/colorUnselected"
                app:piv_viewPager="@id/topItemsViewPager" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>