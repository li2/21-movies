<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Colors-->
    <attr name="colorTransparent" format="reference|color" />
    <attr name="colorUnselected" format="reference|color" />
    <attr name="colorDivider" format="reference|color" />
    <attr name="colorShimmer" format="reference|color" />

    <!--Buttons-->
    <attr name="iconButtonStyle" format="reference" />

    <!--Drawables-->
    <attr name="bottomSheetBackground" format="reference" />
    <attr name="iconLogo" format="reference" />

    <!--Animation-->
    <attr name="navAnimTime" format="integer" />
    <attr name="shimmerDuration" format="integer" />

    <declare-styleable name="HotViewFlipperAttrs">
        <attr name="initialView" format="integer" />
    </declare-styleable>


    <attr name="settingItemViewStyle" format="reference" />

    <declare-styleable name="SettingItemViewAttrs">
        <!--background-->
        <attr name="settingBackgroundColor" format="reference|color" />
        <!--icon-->
        <attr name="settingStartIcon" format="reference" />
        <attr name="settingEndIcon" format="reference" />
        <attr name="settingIconTint" format="reference|color" />
        <!--title-->
        <attr name="settingTitle" format="string" />
        <attr name="settingTitleTextAppearance" format="reference" />
        <attr name="settingTitleTextColor" format="reference|color" />
        <!--value-->
        <attr name="settingValue" format="string" />
        <attr name="settingValueTextAppearance" format="reference" />
        <attr name="settingValueTextColor" format="reference|color" />
    </declare-styleable>

</resources>
